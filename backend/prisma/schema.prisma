generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  imageUrl String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

model FoodPartner {
  id          String @id @default(cuid())
  name        String
  contactName String
  phone       Int
  address     String
  imageUrl    String
  email       String @unique
  password    String
  food        Food[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

model Food {
  id            String      @id @default(cuid())
  name          String
  video         String
  foodPartnerId String
  description   String
  linkCount     Int         @default(0)
  saveCount     Int         @default(0)
  partner       FoodPartner @relation(fields: [foodPartnerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
